enum DeliveryType {
  COURIER
  PERSONAL
  INPOSTPARCEL
}

enum Mailbox {
  ORDERS
  SHOP
  FB
}


type Address {
  street String
  number String
  city String
  zipCode String
}

type ImageInfo {
  url String
  width Int
  length Int
  copies Int
}
