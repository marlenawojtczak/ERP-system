generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  hash      String
  hashedRt  String?
  // role      Role     @default(USER)

  @@map("users")
}

model Client {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  NIP         String   @unique
  companyName String
  firstName   String
  lastName    String
  email       String
  phone       String
  address     Address[]
  // orders      Order[]

  @@map("clients")
}

model Order {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  orderNumber String   @unique
  priority    Boolean  @default(false)
  deadline    DateTime
  delivery    DeliveryType
  address     Address[]
  mailbox     Mailbox
  invoice     Boolean  @default(false)
  nameInvoice String   @ignore
  length      Int
  welds       Int
  cost        Int
  comments    String
  imagesInfo  ImageInfo[]

  // customer    Client   @relation(fields: [customerId], references: [id])
  // customerId  String   @unique @db.ObjectId
  
  @@map("orders")
}

